/dts-v1/;
/plugin/;

#include <dt-bindings/pinctrl/rockchip.h>

/ {
	metadata {
		title = "Enable I2C3-M0";
		compatible = "radxa,rockpis";
		category = "misc";
		exclusive = "GPIO0_B7", "GPIO0_C0";
		description = "Enable I2C3-M0.\nOn Radxa ROCK PI S this is SDA pin 11 & SCL pin 13.";
    };

	fragment@0 {
		target = <&i2c3>;

		__overlay__ {
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&i2c3m0_xfer>;
		};
	};

	fragment@1 {
		target = <&i2c3m0_xfer>;

		__overlay__ {
			rockchip,pins =
				<0 RK_PB7 2 &pcfg_pull_up_12ma>,
				<0 RK_PC0 2 &pcfg_pull_up_12ma>;
		};
	};
};
